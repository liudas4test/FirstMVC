@model FirstMVC.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ol class="list-group">
    <li class="list-group-item">Membership type: @Model.MembershipType.Name</li>
    @if (Model.BirthDate.HasValue)
    {
        string sqlFormatedDate = Model.BirthDate.Value.ToString("d");
        <li class="list-group-item">Birth date: @sqlFormatedDate</li>
    }
</ol>


