@model FirstMVC.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ol class="list-group">
    <li class="list-group-item">Genre: @Model.Genre</li>
    <li class="list-group-item">Release date: @Model.ReleaseDate.ToString("d")</li>
    <li class="list-group-item">Date added: @Model.DateAdded.ToString("d")</li>
    <li class="list-group-item">In stock: @Model.InStock</li>
</ol>

